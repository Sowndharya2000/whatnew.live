<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Admin Dashboard </title>

  <style>
    * {
      box-sizing: border-box;
      font-family: "Segoe UI", Tahoma, sans-serif;
    }

    body {
      background: #f1f3f6;
      padding: 30px;
      margin: 0;
    }

    h2 { margin-bottom: 20px; }
    h3 { margin: 25px 0 10px; }

    .stats {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
      gap: 20px;
      margin-bottom: 30px;
    }

    .stat-box {
      background: linear-gradient(135deg, #111, #333);
      color: white;
      padding: 25px;
      border-radius: 12px;
    }

    .stat-box p {
      font-size: 32px;
      margin: 0;
      font-weight: bold;
    }

    .table-container {
      background: #fff;
      border-radius: 12px;
      margin-bottom: 30px;
      overflow-x: auto;
    }

    table {
      width: 100%;
      border-collapse: collapse;
    }

    th {
      background: #111;
      color: #fff;
      font-size: 13px;
    }

    th, td {
      padding: 12px 15px;
      border-bottom: 1px solid #eee;
      font-size: 14px;
    }

    tr:hover { background: #f8f9fa; }

    .empty {
      text-align: center;
      color: #777;
      font-style: italic;
    }
  </style>
</head>

<body>

  <h2>Admin Dashboard</h2>

 
<div class="stats">
  <!-- Jobs Posted: dynamic -->
  <div class="stat-box">
    <h4>Jobs Posted</h4>
    <p><%= jobs.length %></p>
  </div>

  <!-- Total Jobs: fixed 10 -->
  <div class="stat-box">
    <h4>Total Jobs</h4>
    <p>10</p>
  </div>

  <!-- Total Applications: dynamic -->
  <div class="stat-box">
    <h4>Total Applications</h4>
    <p><%= stats.totalApplications || 0 %></p>
  </div>
</div>


  <h3>Jobs Posted</h3>
  <div class="table-container">
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Location</th>
          <th>Type</th>
          <th>Salary</th>
        </tr>
      </thead>
      <tbody>
        <% if (jobs.length > 0) { %>
          <% jobs.forEach(job => { %>
            <tr>
              <td><%= job.title %></td>
              <td><%= job.location %></td>
              <td><%= job.type %></td>
              <td><%= job.salary %></td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="4" class="empty">No jobs found</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>

  <h3>Applications</h3>
  <div class="table-container">
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Job ID</th>
          <th>Resume</th>
          <th>Date</th>
        </tr>
      </thead>
      <tbody>
        <% if (applications.length > 0) { %>
          <% applications.forEach(app => { %>
            <tr>
              <td><%= app.name %></td>
              <td><%= app.email %></td>
              <td><%= app.jobId %></td>
              <td>
                <a href="/uploads/<%= app.resumePath %>" target="_blank">
                  View Resume
                </a>
              </td>
              <td><%= new Date(app.appliedAt).toLocaleDateString() %></td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="5" class="empty">No applications found</td>
          </tr>
        <% } %>

        
      </tbody>
    </table>



  </div>

</body>
</html>
